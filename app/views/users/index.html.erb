<div class="jumbotron text-center">
	<h2>Peeps!</h2>
	<div class="btn-group" role="group" aria-label="People Groups">
	<%= link_to "Everyone", users_path, class: "btn btn-default #{'active' unless params[:people] == "friends"}" %>
	<%= link_to "My Friends", users_path(people: "friends"), class: "btn btn-default #{'active' if params[:people] == "friends"}" %>
	<%= link_to "My Requests", users_path(people: "requests"), class: "btn btn-default #{'active' if params[:people] == "requests"}" %>
	<%= link_to "Pending Requests", users_path(people: "pending"), class: "btn btn-default #{'active' if  params[:people] == "pending"}" %>
	</div>
</div>

<div class="container">
	<div class="row">
		<%= render @users %>
	</div>
</div>
